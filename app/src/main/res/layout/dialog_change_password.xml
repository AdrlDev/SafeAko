<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="true"
    >

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/comfortaa"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="22sp"
            android:text="Change Staff Password"
            android:textStyle="bold"
            android:textColor="@color/_dark"
            android:id="@+id/title"
            />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To change your password please enter your old password below."
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/_dark"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Old Password"
            app:endIconMode="password_toggle"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_old_password"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/_dark"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="16sp"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/_dark"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Enter new password"
            app:endIconMode="password_toggle"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_new_password"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/_dark"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Confirm new password"
            app:endIconMode="password_toggle"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_confirm_new_password"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/_dark"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@drawable/baseline_save_24"
                app:iconGravity="textStart"
                android:text="Save"
                app:cornerRadius="5dp"
                android:textStyle="bold"
                android:textColor="@color/g3"
                app:iconTint="@color/g3"
                app:strokeColor="@color/g3"
                android:fontFamily="@font/comfortaa"
                android:letterSpacing=".1"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textSize="12sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/btn_save"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@drawable/baseline_close_24"
                app:iconGravity="textStart"
                app:cornerRadius="5dp"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="@color/_red"
                app:iconTint="@color/_red"
                app:strokeColor="@color/_red"
                android:fontFamily="@font/comfortaa"
                android:letterSpacing=".1"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textSize="12sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/btn_cancel"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>